.row
  .col-md-4.col-md-offset-3
    -if notice
      .alert.alert-success
        %p#notice= notice
.row
  .col-md-3.col-md-offset-2
    .well
      %h4 Category: #{category.name}

      %p{:style=>"font-size: 18px "}
        - category.products.each do |product|
          %br
          = link_to product.title, category_product_path(product.category, product)
      
      -if user_signed_in? && current_user.admin
        = link_to 'Edit', edit_category_path(category), class: 'btn btn-warning'
      = link_to 'Back', categories_path, class: 'btn btn-primary'

  .col-md-5
    -if user_signed_in?
      .well
        %h3 New product
        = render 'products/form'


