!!!
%html{ lang: 'en' }
  %head
    %title workshops
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body{:style => "background-color: #99BADD;"}
    %nav.navbar.navbar-default{:role => "navigation"}
      .container-fluid
        .navbar-header
          %a.navbar-brand Netguru Warsaw Workshops 2014
          %ul.nav.navbar-nav
            %li=link_to "<span class='glyphicon glyphicon-list'></span> Categories".html_safe, categories_path
            %li=link_to "<span class='glyphicon glyphicon-star'></span> Products".html_safe, products_path
        %ul.nav.navbar-nav.navbar-right
          -if !user_signed_in?
            %li=link_to "<span class='glyphicon glyphicon-log-in'></span> Sign in".html_safe, new_user_session_path
            %li=link_to "<span class='glyphicon glyphicon-edit'></span> Sign up".html_safe, new_user_registration_path
          -else
            %li
              =link_to "<span class='glyphicon glyphicon-user'></span> #{current_user.email}".html_safe, :controller => :profile, :action => :show, :id => current_user.id
            %li
              =link_to "<span class='glyphicon glyphicon-off'></span> Sign out".html_safe, destroy_user_session_path, data:{method: :delete}
            
    .container-fluid
      .row
        .col-lg-12
          = yield
