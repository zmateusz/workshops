.row
.col-md-3.col-md-offset-4
  %h2 Sign in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), :class => 'form-horizontal') do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true, :placeholder => 'Enter email'
      = f.input :password, required: false
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "Sign in", :class => 'btn btn-primary'
  = render "devise/shared/links"
